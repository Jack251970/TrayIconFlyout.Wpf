<Window
    x:Class="U5BFA.Libraries.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:U5BFA.Libraries"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Shell Flyout Sample App"
    Width="500"
    Height="700"
    d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
    d:DesignHeight="1000"
    d:DesignWidth="500"
    ui:ThemeManager.IsThemeAware="True"
    ui:ThemeManager.RequestedTheme="Default"
    ui:TitleBar.ExtendViewIntoTitleBar="False"
    ui:TitleBar.Height="48"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    Icon="/Assets/Tray.ico"
    mc:Ignorable="d">

    <ui:ScrollViewerEx>
        <Grid>
            <StackPanel Panel.ZIndex="0">

                <ikw:SimpleStackPanel Margin="12" Spacing="8">
                    <TextBlock
                        Margin="4,0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="Tray settings" />
                    <ui:SettingsCard Header="Icon path">
                        <TextBox
                            Width="300"
                            ui:ControlHelper.PlaceholderText="Enter path to the icon"
                            Text="{Binding IconPath, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Tooltip">
                        <TextBox
                            Width="300"
                            ui:ControlHelper.PlaceholderText="Enter the tooltip text"
                            Text="{Binding TooltipText, Mode=TwoWay}" />
                    </ui:SettingsCard>
                </ikw:SimpleStackPanel>

                <ikw:SimpleStackPanel Margin="12" Spacing="8">
                    <TextBlock
                        Margin="4,0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="Flyout settings" />
                    <ui:SettingsCard Header="Enable backdrop">
                        <ui:ToggleSwitch IsOn="{Binding IsBackdropEnabled, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Hide on losing focus">
                        <ui:ToggleSwitch IsOn="{Binding HideOnLostFocus, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Enable transition animation">
                        <ui:ToggleSwitch IsOn="{Binding IsTransitionAnimationEnabled, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Popup direction">
                        <ComboBox
                            Width="150"
                            ItemsSource="{Binding PopupDirections.Values}"
                            SelectedIndex="{Binding SelectedPopupDirectionIndex, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Islands orientation">
                        <ComboBox
                            Width="150"
                            ItemsSource="{Binding IslandsOrientations.Values}"
                            SelectedIndex="{Binding SelectedIslandsOrientationIndex, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Placement">
                        <ComboBox
                            Width="150"
                            ItemsSource="{Binding FlyoutPlacements.Values}"
                            SelectedIndex="{Binding SelectedFlyoutPlacementIndex, Mode=TwoWay}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard Header="Custom location" Visibility="{Binding CustomPlacementVisibility, Mode=OneWay}">
                        <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="8">
                            <ui:NumberBox
                                Width="120"
                                MinWidth="100"
                                ui:ControlHelper.PlaceholderText="Enter X"
                                Value="{Binding CustomFlyoutPlacementX, Mode=TwoWay}" />
                            <ui:NumberBox
                                Width="120"
                                MinWidth="100"
                                ui:ControlHelper.PlaceholderText="Enter Y"
                                Value="{Binding CustomFlyoutPlacementY, Mode=TwoWay}" />
                        </ikw:SimpleStackPanel>
                    </ui:SettingsCard>
                </ikw:SimpleStackPanel>

            </StackPanel>

            <ui:InfoBar
                Title="Option updated"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Panel.ZIndex="100"
                IsClosable="False"
                IsOpen="{Binding IsInfoBarOpen, Mode=TwoWay}" />
        </Grid>
    </ui:ScrollViewerEx>

</Window>
